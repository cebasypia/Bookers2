  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server",
        "-b",
        "0.0.0.0"
      ],
      "showDebuggerOutput": true,
      "useBundler": true,
      "env": {
        "DISABLE_SPRING": "1",
        "RAILS_ENV": "development"
      }
    }
  ]
}