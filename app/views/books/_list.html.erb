<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
      <tr id="book-<%= book.id %>">
        <%= render 'books/item', book: book %>
      </tr>
    <% end %>
  </tbody>
</table>
