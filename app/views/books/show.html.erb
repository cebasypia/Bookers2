<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile' %>

		<h2>New book</h2>
		<%= render 'books/form' %>
	</div>

	<div class="col-xs-9" id="book_detail">
		<h2>Book detail</h2>
		<table class="table table-hover table-inverse">
			<tbody>
				<tr id="book-<%= @book.id %>">
					<%= render 'books/item', book: @book %>
				</tr>
			</tbody>
		</table>

		<h3>コメント</h3>
		<table class="table">
			<% @book_comments.each do |book_comment| %>
				<tr>
					<td>
						<%= link_to (book_comment.user) do %>
							<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
							<%= book_comment.user.name %>
						<% end %>
					</td>

					<td>
						<%= book_comment.content %>
					</td>

					<td>
						<% if book_comment.user_id == current_user.id %>
							<%= link_to "Destroy", book_comment_path(book_comment), method: :delete, class: "btn-sm btn-danger" %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</table>

		<div class="row">
			<%= form_for [@book, @book_comment] do |f| %>
				<%= f.text_area :content, class: "col-xs-10 book_comment_content" %>
				<%= f.submit '送信' %>
			<% end %>
		</div>
	</div>
</div>

