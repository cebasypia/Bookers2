<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @new_book %>
	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
							<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book.user.name %>
						<% end %>
					</td>

					<td><%= link_to @book.title, @book %></td>

					<td><%= @book.body %></td>

					<td>
						<% if current_user.already_favorite?(@book) %>
							<%= link_to book_favorite_path(@book), method: :delete do %>
								<i class="glyphicon glyphicon-heart"></i>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(@book), method: :post do %>
								<i class="glyphicon glyphicon-heart-empty"></i>
							<% end %>
						<% end %>

						<span><%= @book.favorites.count %></span>
					</td>

					<td>
						<p>コメント数 : <%= @book.book_comments.count %></p>
					</td>

					<% if @book.user_id == current_user.id %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

			<h3>コメント</h3>
				<table class="table">
					<% @book_comments.each do |book_comment| %>
						<tr>
							<td>
								<%= link_to (book_comment.user) do %>
									<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
									<%= book_comment.user.name %>
								<% end %>
							</td>

							<td>
								<%= book_comment.content %>
							</td>

							<% if book_comment.user_id == current_user.id %>
								<td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn-sm btn-danger" %></td>
							<% end %>
						</tr>
					<% end %>
			</table>

			<%= form_for [@book, @book_comment] do |f| %>

				<div class="row">
					<%= f.label :content %>
				</div>

				<div class="row">
					<%= f.text_area :content, class: "col-xs-10 book_comment_content" %>
					<%= f.submit 'コメントする', class: "btn btn-primary col-xs-2" %>
				</div>

			<% end %>
	</div>
</div>

