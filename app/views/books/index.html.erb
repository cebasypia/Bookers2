<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= render 'users/profile', user: current_user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: Book.new %>
	</div>

	<div class="col-xs-9">
		<h2>Books index</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
					<th colspan="3"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>
						<%= link_to(book.user) do %>
						<%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
						<% end %>
					</td>
					
					<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
					
					<td><%= book.body %></td>
					
					<td>
						<% if current_user.already_favorite?(book) %>
							<% favorite = Favorite.find_by(user_id: current_user, book_id: book.id) %>
							<%= link_to book_favorite_path(book, favorite), method: :delete do%>
								<i class="glyphicon glyphicon-heart"></i>
							<% end %>
						<% else %>
							<%= link_to book_favorites_path(book), method: :post do %>
								<i class="glyphicon glyphicon-heart-empty"></i>
							<% end %>
						<% end %>
						<span><%= book.favorites.count %></span>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<!--books一覧 -->
	</div>
</div>